<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a4_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egreen.egreenbeta05.A4_FindId"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@drawable/border_bottom"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="학번 찾기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 이름, 생년월일, 이메일 주소 입력 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <!-- 이름 -->
            <EditText
                android:id="@+id/a4_findIdInputName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:hint="이름을 입력해주세요."
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp"/>

            <!-- 생년월일 -->
            <EditText
                android:id="@+id/a4_findIdInputBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:hint="생년월일을 입력해주세요."
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="numberDecimal"/>

            <!-- 이메일 주소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/a4_findIdInputEmail1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:hint="e메일을 입력해주세요."
                    android:textSize="13dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:inputType="textEmailAddress"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/a4_findIdInputEmail2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:hint="[직접입력]"
                        android:textSize="13dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="7dp"
                        android:inputType="textEmailAddress"/>

                    <Spinner
                        android:id="@+id/a4_emailSpinner"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"/>

                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/a4_findIdBt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="학번 찾기"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="19dp"
                android:background="@drawable/btn_back_color"/>

        </LinearLayout>
        <!-- 이름, 생년월일, 이메일 주소 입력 영역 -->
    </ScrollView>

</LinearLayout>